{
  "name": "descanso",
  "version": "1.0.0",
  "description": "Define express routes using ES6 classes and decorators.",
  "keywords": [
    "express",
    "typescript",
    "decorators"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "npm run clean && tsc",
    "lint": "tslint -p . -c tslint.json 'src/**/*.ts'",
    "test": "npm run lint && npm run cover",
    "cover": "rimraf ./coverage && nyc mocha",
    "prepublishOnly": "npm run clean && npm run test && npm run build",
    "document": "typedoc --exclude \"**/*.test.ts\" --mode modules --out docs ./src",
    "clean": "rimraf ./lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kirkbrauer/descanso.git"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.test.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html",
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "author": "Kirk Brauer",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kirkbrauer/descanso/issues"
  },
  "homepage": "https://github.com/kirkbrauer/descanso#readme",
  "devDependencies": {
    "@types/async": "^2.0.45",
    "@types/chai": "^4.0.4",
    "@types/chai-as-promised": "^7.1.0",
    "@types/chai-http": "^3.0.3",
    "@types/chai-spies": "0.0.0",
    "@types/http-status": "^0.2.30",
    "@types/mocha": "^2.2.44",
    "@types/portscanner": "^2.1.0",
    "@types/underscore": "^1.8.5",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^3.0.0",
    "chai-spies": "^0.7.1",
    "coveralls": "^3.0.0",
    "istanbul": "^0.4.5",
    "mocha": "^4.0.1",
    "nyc": "^11.3.0",
    "portscanner": "^2.1.1",
    "rimraf": "^2.6.2",
    "source-map-support": "^0.5.0",
    "ts-node": "^3.3.0",
    "tslint": "^5.8.0",
    "tslint-config-airbnb": "^5.3.1",
    "typedoc": "^0.9.0",
    "typescript": "^2.6.1"
  },
  "dependencies": {
    "@types/express": "^4.0.39",
    "@types/node": "^8.0.53",
    "async": "^2.6.0",
    "express": "^4.16.2",
    "http-status": "^1.0.1",
    "underscore": "^1.8.3"
  }
}
